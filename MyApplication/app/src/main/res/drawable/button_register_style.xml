<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#755E57"/>
            <gradient android:angle="-90" android:startColor="#625775" android:endColor="#625775"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#5E6279"/>
            <gradient android:angle="-90" android:startColor="#625775" android:endColor="#2B559C"/>
        </shape>
    </item>

</selector>